@model Bloggie.Web.Models.ViewModels.AddTagRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-1">
    <div class="container">
        <hi>Add New Tag - Admin Functionality</hi>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <lable class="form-label">Name</lable>
            <input type="text" class="form-control" id="name" asp-for="Name"/>
        </div>
        <div class="mb-3">
            <lable class="form-label">Display Name</lable>
            <input type="text" class="form-control" id="displayname" asp-for="DisplayName"/>
        </div>

        <div class="mb-3">
            <button class="btn btn-dark" type="submit">Submit</button>
        </div>
    </form>
</div>